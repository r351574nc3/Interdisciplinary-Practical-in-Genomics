package BlastParser;


sub new {
    my $class = shift;

    return bless {_recordHandler => shift, _commentHandler => shift}, $class;
}


sub parse {
    my $input = shift;
    open(BLASTIN, "<" . $input);
    while(<BLASTIN>) {
        chop();
        if (isRecord($_)) {
            handleRecord(parseRecord($_));
        }
        elsif (isComment($_)) {
            handleComment();
        }
    }
    close(BLASTIN);
}

return 1;
