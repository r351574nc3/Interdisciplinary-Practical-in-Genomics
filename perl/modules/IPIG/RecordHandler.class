##
# Abstract class for creating instances used by the BlastParser for handling
# records.
#
#
# Author: Leo Przybylski (przybyls@arizona.edu)
##
package RecordHandler;

sub new {
    my $class = shift;

    return bless {}, $class;
}


sub handleRecord {
    my $this   = shift;
}

sub validateRecord {
    my $this      = shift;
    my $alignment = shift;
    my $record    = shift;
}

return 1;
